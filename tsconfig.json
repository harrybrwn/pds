{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "toos/**",
  ]
}
